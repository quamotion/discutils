<?xml version="1.0" encoding="utf-8" ?>
<Project DefaultTargets="All"
        xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <UsingTask AssemblyFile="DiscUtils.MSBuild.dll" TaskName="CreateIso"/>

  <Target Name="RunMyTask">
    <ItemGroup>
      <IsoFiles Include="C:\Temp\DiscUtils\**\*"/>
    </ItemGroup>
    
    <CreateIso FileName="TestIso.iso" VolumeLabel="DISCUTILS_ARCHIVE" SourceFiles="@(IsoFiles)" RemoveRoot="C:\Temp\DiscUtils" UseJoliet="true"/>
  </Target>

</Project>
